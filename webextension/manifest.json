{
    "manifest_version": 2,
    "name": "QRShot",
    "version": "1.0",

    "description": "This extension allow you to screenshot part of the webpage and scan the qrcode in it.",
    "icons": {
        "32": "/icons/qrshot_icon.png"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "/icons/qrshot_icon.png",
        "default_title": "qrshot"
    }
}